<PageFunction x:Class="Or.Pages.Conseille"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      x:TypeArguments="sys:Int64"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Conseille">

    <Grid >


        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">

            <!-- En-tête -->

            <TextBlock Text="Informations du Conseiller" FontSize="26" FontWeight="Bold" Foreground="#273c75" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <!-- Bloc d'informations -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Nom -->
                <TextBlock Text="Nom :" Grid.Row="0" Grid.Column="0" FontWeight="SemiBold" FontSize="16" Foreground="#353b48"/>
                <TextBlock x:Name="TxtNom" Grid.Row="0" Grid.Column="1" FontSize="16" Foreground="#40739e"/>

                <!-- Prénom -->
                <TextBlock Text="Prénom :" Grid.Row="1" Grid.Column="0" FontWeight="SemiBold" FontSize="16" Foreground="#353b48" Margin="0,10,0,0"/>
                <TextBlock x:Name="TxtPrenom" Grid.Row="1" Grid.Column="1" FontSize="16" Foreground="#40739e" Margin="0,10,0,0"/>

                <!-- Téléphone -->
                <TextBlock Text="Téléphone :" Grid.Row="2" Grid.Column="0" FontWeight="SemiBold" FontSize="16" Foreground="#353b48" Margin="0,10,0,0"/>
                <TextBlock x:Name="TxtTel" Grid.Row="2" Grid.Column="1" FontSize="16" Foreground="#40739e" Margin="0,10,0,0"/>

                <!-- Mail -->
                <TextBlock Text="Adresse mail :" Grid.Row="3" Grid.Column="0" FontWeight="SemiBold" FontSize="16" Foreground="#353b48" Margin="0,10,0,0"/>
                <TextBlock x:Name="TxtMail" Grid.Row="3" Grid.Column="1" FontSize="16" Foreground="#40739e" Margin="0,10,0,0"/>
            </Grid>

            <!-- Ligne séparatrice -->
            <Separator Margin="0,30,0,20" Background="#dcdde1" Height="1"/>

            <!-- Bouton retour -->
            <Button Content="Retour" Width="160" Height="45" FontSize="16" FontWeight="SemiBold" BorderThickness="0" HorizontalAlignment="Center" Cursor="Hand" Click="Retour_Click">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="3" BlurRadius="5" Opacity="0.3"/>
                </Button.Effect>
            </Button>

        </StackPanel>
    </Grid>
</PageFunction>
