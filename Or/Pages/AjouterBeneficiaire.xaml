<PageFunction x:Class="Or.Pages.AjouterBeneficiaire"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      x:TypeArguments="sys:Int64"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      xmlns:ec="clr-namespace:Or.Business"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Ajouter Beneficiaire">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Ajouter un bénéficiaire" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20"/>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="679" Margin="0,90,0,0.4" Grid.RowSpan="2">

            <Label Content="Numéro du compte bénéficiaire"/>
            <TextBox x:Name="IdCompte" Margin="0,0,461.2,10" Height="28"/>

        </StackPanel>
        <Button Content="Retour" Width="100" Margin="36,128.6,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="Retour_Click" Grid.Row="1"/>
        <Button Content="Ajouter un bénéficiaire" Grid.Row="1" Margin="0,70.6,144,0" HorizontalAlignment="Right" VerticalAlignment="Top"  Click="Valider_Click" />
    </Grid>
</PageFunction>

