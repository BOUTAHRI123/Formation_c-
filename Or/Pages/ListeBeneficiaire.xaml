<PageFunction x:Class="Or.Pages.ListeBeneficiaire"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      x:TypeArguments="sys:Int64"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      xmlns:ec="clr-namespace:Or.Business"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Liste des bénéficiaires" KeepAlive="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>

        <StackPanel Margin="10" Orientation="Vertical" Grid.Row="0" Grid.Column="0">
            <TextBlock x:Name="Titre" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Liste des bénéficiaires" VerticalAlignment="Top" FontSize="20" FontWeight="SemiBold"/>
        </StackPanel>

        <StackPanel Margin="10" Orientation="Vertical" Grid.Row="1" Grid.Column="0">
            <TextBlock x:Name="IdCarte" HorizontalAlignment="Stretch" Margin="0,0,0,8" TextWrapping="Wrap" VerticalAlignment="Stretch" Background="#FFD2D0D0" Height="20" FontSize="14"/>
            <TextBlock x:Name="Nom" HorizontalAlignment="Stretch" Margin="0,0,0,8" TextWrapping="Wrap" VerticalAlignment="Stretch" Background="#FFD2D0D0" Height="20" FontSize="14"/>
            <TextBlock x:Name="Prenom" HorizontalAlignment="Stretch" Margin="0,0,0,8" TextWrapping="Wrap" VerticalAlignment="Stretch" Background="#FFD2D0D0" Height="20" FontSize="14"/>
        </StackPanel>

        <ListView x:Name="listbeneficiaire" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Grid.ColumnSpan="2" SizeChanged="ListView_SizeChanged">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nom" Width="150">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text= "{Binding Nom}"
                                      Style="{StaticResource TextColumnStyle}"
                                      TextAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Prénom" Width="100">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding Prenom}"
                                        Style="{StaticResource TextColumnStyle}"
                                        TextAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="N° Compte" Width="50">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding IdCompte}"
                                       Style="{StaticResource TextColumnStyle}"
                                       TextAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Actions" Width="100">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="Supprimer" Content="Supprimer" Click="BtnSupprimer_Click" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Margin="10" Orientation="Vertical" Grid.Row="2" Grid.Column="0" >
            <Button x:Name="Retour" Content="Retour" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="Retour_Click" Margin="000,0,0,8"/>
        </StackPanel>
        <Button Content="Ajouter bénéficiaire" Grid.Row="1" Grid.Column="2" Margin="0,0,81,5" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Click="BtnAjouter_Click" />
    </Grid>
</PageFunction>
