<PageFunction x:Class="Or.Pages.CreerCompte"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      x:TypeArguments="sys:Int64"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreerCompte">

    <Grid Background="#f5f6fa">
        <Border Background="White" CornerRadius="12" Padding="30" Margin="158,10,176,48.6" BorderBrush="#dcdde1" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="391" Width="466">

            <StackPanel Width="400" Margin="1.6,-0.4,2.4,77">

                <TextBlock Text="Création d'une nouvelle carte" FontSize="24" FontWeight="Bold" Foreground="#273c75" HorizontalAlignment="Center" Margin="0,0,0,25"/>



                <Label Content="Nom du client :" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtNom" Margin="0,0,0,15"/>

                <Label Content="Prénom du client :" FontWeight="SemiBold" Height="28"/>
                <TextBox x:Name="TxtPrenom" Margin="0,0,0,25"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Créer le compte" Width="150" Height="40"  FontWeight="Bold" Click="BtnCreer_Click" Margin="0,0,10,0"/>
                    <Button Content="Retour" Width="100" Height="40" Click="BtnRetour_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</PageFunction>

