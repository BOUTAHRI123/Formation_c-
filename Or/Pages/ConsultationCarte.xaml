<PageFunction x:Class="Or.Pages.ConsultationCarte"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      x:TypeArguments="sys:Int64"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      xmlns:ec="clr-namespace:Or.Business"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="ConsultationCarte" KeepAlive="True" Height="674">

    <Grid Margin="0,10,0,-218.4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="48.8" />
            <RowDefinition Height="223*" />
            <RowDefinition Height="32*"/>
            <RowDefinition Height="639*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="53*" />
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="49*" />
            <ColumnDefinition Width="414*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="9.6,10,9.8,458.4" Orientation="Vertical" Grid.Row="0" Grid.Column="1">
            <TextBlock x:Name="Titre" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Consultation Carte" VerticalAlignment="Top" FontSize="20" FontWeight="SemiBold"/>
        </StackPanel>

        <StackPanel Margin="9.6,60,9.8,291.2" Orientation="Vertical" Grid.Column="1">
            <TextBlock x:Name="Numero"  Margin="0,0,0,8" HorizontalAlignment="Stretch"  TextWrapping="Wrap" VerticalAlignment="Stretch" Background="#FFD2D0D0" Height="20" FontSize="14"/>
            <TextBlock x:Name="Nom"     Margin="0,0,0,8" HorizontalAlignment="Stretch"  TextWrapping="Wrap" VerticalAlignment="Stretch" Background="#FFD2D0D0" Height="20" FontSize="14"/>
            <TextBlock x:Name="Prenom"  Margin="0,0,0,8" HorizontalAlignment="Stretch"  TextWrapping="Wrap" VerticalAlignment="Stretch" Background="#FFD2D0D0" Height="20" FontSize="14"/>

        </StackPanel>
        <ListView x:Name="listView" HorizontalAlignment="Left" Grid.Column="4" SizeChanged="ListView_SizeChanged" Margin="2.2,46,-9,329.4" Width="470" Grid.ColumnSpan="2">
            <ListView.Resources>
                <ec:EuroConverter x:Key="EuroConverter"/>
            </ListView.Resources>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="30">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding Id}"
                                               Style="{StaticResource TextColumnStyle}"
                                               TextAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Type de compte" Width="130">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding TypeDuCompte}"
                                               Style="{StaticResource TextColumnStyle}"
                                               TextAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Solde du compte" Width="150">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding Solde, Converter={StaticResource EuroConverter}}"
                                               Style="{StaticResource TextColumnStyle}"
                                               TextAlignment="Right" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Actions"  Width="100">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Détails" Click="GoDetailsCompte" CommandParameter="{Binding Id}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Margin="9.6,240,9.8,225.6" Orientation="Vertical" Grid.Column="1" RenderTransformOrigin="0.568,0.716" Grid.RowSpan="4" >
            <Button Content="Consulter Historique" Margin="0,0,0.2,8"  HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="GoHistoTransactions" />
            <Button Content="Effectuer un Retrait" Margin="0,0,0,8" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="GoRetrait"/>
            <Button Content="Effectuer un Dépôt"  Margin="0,0,0,8" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="GoDepot" />
            <Button Content="Effectuer un Virement"  Margin="0,0,0,8" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="GoVirement" />
            <Button Content="Liste des Bénéficiaires"  Margin="0,0,0,8" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="GoListeBeneficiaires_Click" />
            <Button Content="Consulter votre conseiller"  Margin="0,0,0,8" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="GoConseiller" />
            <Button Content="Ajouter un Compte Livret "  Margin="0,0,0,8" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="GoAjouteCompte" />
            <Button Content="Supprimer un Compte Livret "  Margin="0,0,0,8" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="GoSuppCompte" />
            <Button Content="Changer Plafond" Margin="0,0,0,8" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="GoChangerPlafond"/>
            <Label Content="Fichier à importer"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtFichierImport" Width="223" Margin="0,0,10,0" Height="33"/>
            </StackPanel>

        </StackPanel>

        <Button Content="Exporter Transactions" Grid.Column="5" Margin="0,457,82,0" HorizontalAlignment="Right" VerticalAlignment="Top"  Click="Exportfichier" Width="169" />
        <Button Content="Importer Transactions" Grid.Row="1" Grid.Column="5" Margin="0,18.6,82,0" HorizontalAlignment="Right" VerticalAlignment="Top"  Click="BtnImporterTransactions_Click" Width="170" />

    </Grid>
</PageFunction>
