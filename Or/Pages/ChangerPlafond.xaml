<PageFunction x:Class="Or.Pages.ChangerPlafond"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      x:TypeArguments="sys:Int64"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      xmlns:ec="clr-namespace:Or.Business"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="ChangerPlafond" KeepAlive="True" Height="674">

    <Grid Margin="30">
        <StackPanel>

            <TextBlock Text="Changer le plafond de la carte" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Plafond actuel :" FontWeight="SemiBold"/>
            <TextBlock x:Name="TxtActuel" Margin="0,0,0,15" />

            <TextBlock Text="Nouveau plafond :" FontWeight="SemiBold"/>
            <TextBox x:Name="TxtNouveau" Width="200" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Valider" Width="100" Margin="0,0,20,0" Click="Valider_Click"/>
                <Button Content="Annuler" Width="100" Click="Annuler_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</PageFunction>
