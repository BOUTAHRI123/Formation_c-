<Window x:Class="Or.Pages.SimulationCredit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SimulationCredit">

    <Grid Margin="20">

        <StackPanel>

            <TextBlock Text="Simulation de Crédit" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Salaire -->
            <TextBlock Text="Salaire mensuel (€)" FontWeight="SemiBold"/>
            <TextBox x:Name="TxtSalaire" Width="200" Margin="277,5,276.6,15"/>

            <!-- Montant demandé -->
            <TextBlock Text="Montant demandé (€)" FontWeight="SemiBold"/>
            <TextBox x:Name="TxtMontant" Width="200" Margin="0,5,0,15"/>
            <TextBlock Text="Durée (en mois)" FontWeight="SemiBold" Margin="0,0,-0.4,0"/>

            <!-- Durée -->
            <ComboBox x:Name="CmbDuree" Width="200" Margin="277,5,276.6,15">
                <ComboBoxItem Content="12"/>
                <ComboBoxItem Content="24"/>
                <ComboBoxItem Content="36"/>
                <ComboBoxItem Content="48"/>
                <ComboBoxItem Content="60"/>
                <ComboBoxItem Content="72"/>
                <ComboBoxItem Content="84"/>
                <ComboBoxItem Content="96"/>
                <ComboBoxItem Content="108"/>
                <ComboBoxItem Content="120"/>
                <ComboBoxItem Content="132"/>
                <ComboBoxItem Content="144"/>
                <ComboBoxItem Content="156"/>
                <ComboBoxItem Content="168"/>
                <ComboBoxItem Content="180"/>
                <ComboBoxItem Content="192"/>
                <ComboBoxItem Content="204"/>
                <ComboBoxItem Content="216"/>
                <ComboBoxItem Content="228"/>
                <ComboBoxItem Content="240"/>
            </ComboBox>

            <!-- Crédit existant -->
            <TextBlock Text="Avez-vous déjà un crédit ?" FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                <RadioButton x:Name="RbOui" Content="Oui" Margin="0,0,20,0" Checked="RbOui_Checked"/>
                <RadioButton x:Name="RbNon" Content="Non" Checked="RbNon_Checked"/>
            </StackPanel>

            <!-- Montant crédit existant -->
            <TextBlock x:Name="LblCredit" Text="Montant du crédit existant (€)" Visibility="Collapsed"/>
            <TextBox x:Name="TxtCreditExistant" Width="200" Visibility="Collapsed" Margin="0,5,0,15"/>

            <!-- Résultat -->
            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" CornerRadius="6" Background="#FFF7F7F7" Margin="0,10">
                <TextBlock x:Name="TxtResultat" TextWrapping="Wrap"/>
            </Border>

            <!-- Boutons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Simuler" Width="100" Margin="0,0,10,0" Click="BtnSimuler_Click"/>
                <Button Content="Fermer" Width="100" Click="BtnFermer_Click"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
